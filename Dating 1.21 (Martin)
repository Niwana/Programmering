yesNoAnswers :: [Char] -> Bool
yesNoAnswers xs
    | "? " `isIn` zs = True
    | otherwise = False
     where zs = (filter (/=',') (filter (/='!') (map toLower (filter (== '?') xs))) ++ " ")
  
