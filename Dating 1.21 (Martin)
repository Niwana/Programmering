yesNoAnswer = do
    let yesList = ["Yes", "Yes!", "Yeah", "Of course", "Hell yeah!", "Darn right son!", "No", "Nah", "No thanks...", 
                   "Hell no!", "No!"]
    randomInt <- getStdRandom (randomR (0, (length yesList - 1)))
    let randomYes = yesList !! randomInt
    putStrLn randomYes

        
